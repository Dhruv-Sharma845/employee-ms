<h2>Companies List</h2>
<hr>
<hr>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            {% for company in companies %}
                <tr>
                    <td>
                        <span class="glyphicon glyphicon-remove" onclick="removeCompany({{company.id}})"></span>
                    </td>
                    <td>{{company.name}}</td>
                    <td>{{company.address}}</td>
                    <td>{{company.phone}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>